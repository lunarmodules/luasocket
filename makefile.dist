dist:
	mkdir -p $(DIST)
	cp -vf CHANGELOG.md $(DIST)
	cp -vf LICENSE $(DIST)
	cp -vf README.md $(DIST)
	cp -vf $(MAKE) $(DIST)

	mkdir -p $(DIST)/src
	cp -vf $(SRC) $(DIST)/src

	mkdir -p $(DIST)/docs
	cp -vf $(DOCS) $(DIST)/docs

	mkdir -p $(DIST)/samples
	cp -vf $(SAMPLES) $(DIST)/samples

	mkdir -p $(DIST)/test
	cp -vf $(TEST) $(DIST)/test

	tar -zcvf $(DIST).tar.gz $(DIST)
	zip -r $(DIST).zip $(DIST)

clean:
	\rm -rf $(DIST) $(DIST).tar.gz $(DIST).zip
